<%- contentFor('body') %>
<div class="card" style="margin-left: 20em;">
    <div class="card-header" id="headingOne">
        <h5 class="mb-0">
        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne" style="color: rgb(25, 200, 128);">
            Número Primo
        </button>
        </h5>
    </div>

    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
        <div class="card-body">
            <form action="/primo" method="POST">
                <div class="form-group row">
                <label for="inputEmail3" class="col-sm-4 col-form-label">Digite um número</label>
                <div class="col-sm-7">
                    <div class="input-group mb-3">
                        <input type="text" style="display: none;" name="funcao" value="Números Primos">
                        <input type="number" class="form-control" id="inputPrimo" name="inputPrimo" placeholder="Positivo e inteiro" aria-label="Digite um número positivo" aria-describedby="button-addon2">
                        <div class="input-group-append">
                            <!--id="btnPrimo"-->
                        <button class="btn btn-outline-success" type="submit">Verificar</button>
                        </div>
                    </div>
                </div>
                </div>
                <div class="form-group row">
                <label for="inputPassword3" class="col-sm-4 col-form-label">Resultado</label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" name="resultPrimo" value="<%=resLabel %>" disabled>
                </div>
                <br/>
                <!-- Botão para acionar modal 
                <button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#ExemploModalCentralizado">
                    Dados do Data Base (Firebase)
                </button>-->
                </div>
                
            </form>
        </div>
    </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="ExemploModalCentralizado" tabindex="-1" role="dialog" aria-labelledby="TituloModalCentralizado" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="TituloModalCentralizado">Resultado da Consulta</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
          <button type="button" class="btn btn-primary">Salvar mudanças</button>
        </div>
      </div>
    </div>
  </div>